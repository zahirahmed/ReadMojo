<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/cancel_ll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            />
    </LinearLayout>



    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/ll_loginmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        <LinearLayout
            android:layout_marginTop="20dp"
         android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:orientation="horizontal" >
            <TextView
                android:text="R"
                android:textStyle="italic"
                android:textSize="35dp"
                android:textColor="@color/blue2"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

            <TextView
                android:text="E"
                android:textStyle="italic"
                android:textSize="35dp"
                android:textColor="@color/pinknew"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

            <TextView
            android:text="A"
                android:textStyle="italic"
            android:textSize="35dp"
            android:textColor="@color/darkpurple"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

            <TextView
                android:text="D"
                android:textStyle="italic"
                android:textSize="35dp"
                android:textColor="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />




            <TextView
                android:layout_marginLeft="25dp"
                android:text="M"
                android:textStyle="italic"
                android:textSize="35dp"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

            <TextView
                android:text="O"
                android:textStyle="italic"
                android:textSize="35dp"
                android:textColor="@color/bluenew"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

            <TextView
                android:text="J"
                android:textStyle="italic"
                android:textSize="35dp"
                android:textColor="@color/yellow"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

            <TextView
                android:text="O"
                android:textStyle="italic"
                android:textSize="35dp"
                android:textColor="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
</LinearLayout>

            <LinearLayout
android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:orientation="vertical" >

                <Gallery
                    android:id="@+id/logingallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s1" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/login_main_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/login_sub_ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp" >
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:background="@drawable/txtbox"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

<ImageView
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:src="@drawable/icon_email"/>

                        <com.gayatri.testapp.Utils.MyEditText
                            android:id="@+id/et_login_madd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Enter Email Address"
                            android:inputType="textEmailAddress"
                            android:padding="3dp"
                             android:background="@android:color/transparent"
                            android:singleLine="true"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/txtbox"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_password"/>

                    <com.gayatri.testapp.Utils.MyEditText
                        android:id="@+id/et_login_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:hint="Enter Password"
                        android:background="@android:color/transparent"

                        android:inputType="textPassword"
                        android:padding="3dp"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:textSize="12sp" />
                        </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/login_sub_ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                     android:padding="10dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:padding="3dp"
                        android:layout_alignParentLeft="true" >

                        <CheckBox
                            android:id="@+id/cb_autologin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:button="@drawable/unchacked"
                            android:gravity="left|center_vertical"
                            android:text="@string/autologin"
                            android:paddingLeft="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/purple" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" >

                        <TextView
                            android:id="@+id/tv_frgtpwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             android:layout_alignParentRight="true"
                            android:layout_marginLeft="4dp"
                            android:text="@string/forgotpwd"
                           android:gravity="right|center_vertical"
                            android:textColor="@color/bluenw1" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/login_sub_ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/bt_login_signin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"

                        android:gravity="center"
                        android:padding="5dp"
                        android:background="@drawable/signin_btn"
                        android:text="Sign In"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/bt_login_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/signin_btn"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Cancel"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_sub_ll4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_login_nwuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nwuser"
                        android:textColor="@color/pinknew" />

                    <TextView
                        android:id="@+id/tv_login_nwuser_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:padding="2dp"
                        android:text="@string/click"
                        android:textColor="@color/darkpurple"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="to SignUp"
                        android:textColor="@color/yellow" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="17dp"/>

                    <com.facebook.login.widget.LoginButton
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:id="@+id/fb_login_button"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        />


                   <TextView
                       android:visibility="gone"
                        android:padding="10dp"
                        android:id="@+id/iv_fblogin"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Facebook"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/fb_connect_icon"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
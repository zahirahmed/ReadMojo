<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gayatri.testapp.CustomScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       >



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.gayatri.testapp.Utils.MyTextView
            android:id="@+id/tv_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp">


            <com.gayatri.testapp.Utils.MyTextView
                android:id="@+id/tv_book_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="8dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <com.gayatri.testapp.Utils.CircularImagvieNew
                    android:id="@+id/civ_profile_drawer"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/default_user" />

                <com.gayatri.testapp.Utils.MyTextView
                    android:id="@+id/cv_user_book_creater_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="8dp" />


            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:id="@+id/viewpager"
            android:layout_gravity="center"
            android:src="@drawable/audio_book"
            android:layout_width="wrap_content"
            android:layout_height="180dp" />

        <LinearLayout
    android:paddingLeft="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <com.gayatri.testapp.Utils.MyTextView
            android:id="@+id/tv_date"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="Friday,jan 14,12:00 PM"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <com.gayatri.testapp.Utils.MyTextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_book_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|left"
            android:text="835,Airport blvd,Burlingame,CA 94010,United States"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <com.gayatri.testapp.Utils.MyTextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_book_moral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical|left"
            android:text="835,Airport blvd,Burlingame,CA 94010,United States"
            android:textColor="@color/black"
            android:textSize="10dp" />
</LinearLayout>



            <Button
                android:id="@+id/bt_share_detail"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_margin="30dp"
                android:background="@drawable/login_btn"
                android:text="Share"
                android:textColor="@color/grey_0" />

        </LinearLayout>
    </com.gayatri.testapp.CustomScrollView>
</LinearLayout>